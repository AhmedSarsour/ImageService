@model ImageService.WebApplication.Models.LogsModel
@{
    ViewBag.Title = "Image Web";
}


<h2>@Html.DisplayNameFor(Model => Model.Logs) </h2>

@if (Model.IsConnected())
{

    <div class="input-group">
        <span class="input-group-addon">Type</span>
        <input id="msg" type="text" class="form-control" name="msg" placeholder="Enter here a type">
        <input class="btn btn-info" type="button" id="btnSearch" value="Search" />

    </div>
    <br />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Logs.Logs)
        {
            string css = "info";
            string type = item.Type;
            //Coloring the table rows
            switch (type)
            {
                case "INFO":
                    css = "success";
                    break;
                case "WARRNING":
                    css = "warning";
                    break;
                case "FAIL":
                    css = "danger";
                    break;

                default:
                    css = "success";
                    break;

            }
            <tr class="@css">

                    <td>

                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
               

              
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
            </tr>
                }
            

    </table>
}